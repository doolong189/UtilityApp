<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_custom_bottom_layout"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top|start"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/note_"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create File"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="4dp"
        android:clipToPadding="false"
        android:clipChildren="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
           >
            <EditText
                android:id="@+id/dialog_create_pdf_edFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_custom"
                android:hint="File name"
                android:padding="10sp"
                android:textColorHint="@color/black"
                android:layout_margin="5dp"
                android:imeOptions="actionDone"
                android:inputType="text|textNoSuggestions"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set password"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
                <Switch
                    android:id="@+id/dialog_create_pdf_swPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/dialog_create_pdf_edPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_custom"
                android:hint="Password"
                android:padding="10sp"
                android:textColorHint="@color/black"
                android:layout_margin="5dp"
                android:inputType="textPassword"
                android:visibility="gone"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_create_pdf_btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Cancel"
                android:background="@drawable/bg_custom"
                android:backgroundTint="@color/bg_dialog"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="5dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_create_pdf_btnConvert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Convert"
                android:background="@drawable/bg_custom"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
